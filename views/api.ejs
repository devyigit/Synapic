<html lang="en">
  <head>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta charset="UTF-8" />
    <title>Synapic / Api</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      :root {
        --clr-primary: #009688; /* Teal */
        --clr-secondary: #f44336; /* Red */
        --bg-primary: #121212; /* Dark Black */
        --bg-secondary: #2d3748; /* Lighter Dark Blue */
        --text-primary: #ffffff; /* White */
        --text-secondary: #b0b0b0; /* Light Gray */
        --btn-bg: #6200ea; /* Purple */
        --btn-hover-bg: #3700b3; /* Dark Purple */
        --card-bg: #1e1e1e; /* Dark Gray */
        --card-hover-bg: #333333; /* Darker Gray */
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      * {
        margin: 0;
        font: inherit;
      }

      html {
        color-scheme: dark;
      }

      body {
        font-family: system-ui, sans-serif;
        min-height: 100vh;
        background-color: var(--bg-primary);
        color: var(--text-secondary);
      }

      ul:where([role="list"]) {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      section {
        padding-block: clamp(2rem, 5vw, 5rem);
      }

      a {
        color: var(--clr-primary);
        text-decoration: none;
      }

      .container {
        width: min(100% - 2rem, 65rem);
        margin-inline: auto;
      }

      .section-title {
        font-size: clamp(2rem, 5vw, 3rem);
        text-align: center;
        font-weight: bold;
        color: var(--text-primary);
        margin-bottom: 2rem;
      }

      .card {
        background-color: var(--card-bg);
        border-radius: 1rem;
        text-align: center;
        overflow: hidden;
        padding: 2rem 1.5rem;
        width: 100%;
        max-width: 350px;
        margin: 0 auto;
        transition: transform 300ms ease, box-shadow 300ms ease, background-color 250ms ease;
      }

      .card:hover {
        background-color: var(--card-hover-bg);
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      }

      .card__front {
        padding: 1rem;
      }

      .card__name {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--text-primary);
      }

      .card__position {
        font-size: 1rem;
        color: var(--text-secondary);
      }

      .card__footer {
        margin-top: 1.5rem;
      }

      .card__toggle {
        text-align: center;
        border-radius: 50%;
        width: 3rem;
        height: 3rem;
        padding: 0.5rem;
        background-color: var(--btn-bg);
        color: var(--text-primary);
        border: none;
        cursor: pointer;
        transition: background-color 250ms ease;
      }

      .card__toggle:hover {
        background-color: var(--btn-hover-bg);
      }

      .card__toggle-icon {
        transition: rotate 250ms ease;
      }

      .card[data-visible="true"] .card__toggle-icon {
        rotate: 45deg;
      }
    </style>
  </head>

  <body>
    <section>
      <div class="container flow-content">
        <div class="mb-8">
          <a href="/">
            <img src="https://raw.githubusercontent.com/devyigit/Synapic/refs/heads/main/images/green.png" alt="Synapic Logo" class="w-40 h-40 rounded-full mx-auto shadow-lg">
          </a>
        </div>
        <h2 class="section-title">Synapic API service</h2>
        <ul role="list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <li>
            <article class="card" data-visible="false">
              <div class="card__front">
                <h1 class="card__name">Dolar API</h1>
                <p class="card__position">Türkiye dolar API'si</p>
              </div>
              <footer class="card__footer">
                <a href="/api/dolar?apikey=synapicsearch">
                  <button class="card__toggle">
                    <i class="fa-solid fa-plus card__toggle-icon"></i>
                  </button>
                </a>
              </footer>
            </article>
          </li>

          <li>
            <article class="card" data-visible="false">
              <div class="card__front">
                <h1 class="card__name">Euro API</h1>
                <p class="card__position">Euro kaç tl API'si</p>
              </div>
              <footer class="card__footer">
                <a href="/api/euro?apikey=synapicsearch">
                  <button class="card__toggle">
                    <i class="fa-solid fa-plus card__toggle-icon"></i>
                  </button>
                </a>
              </footer>
            </article>
          </li>

          <li>
            <article class="card" data-visible="false">
              <div class="card__front">
                <h1 class="card__name">Synapic Search API</h1>
                <p class="card__position">Synapic Search'in kullanıcılar için açtığı search API servisi</p>
              </div>
              <footer class="card__footer">
                <a href="/api/search?apikey=synapicsearch&query=synapic">
                  <button class="card__toggle">
                    <i class="fa-solid fa-plus card__toggle-icon"></i>
                  </button>
                </a>
              </footer>
            </article>
          </li>

          <li>
            <article class="card" data-visible="false">
              <div class="card__front">
                <h1 class="card__name">Sterlin API</h1>
                <p class="card__position">Sterlin kaç tl API'si</p>
              </div>
              <footer class="card__footer">
                <a href="/api/sterlin?apikey=synapicsearch">
                  <button class="card__toggle">
                    <i class="fa-solid fa-plus card__toggle-icon"></i>
                  </button>
                </a>
              </footer>
            </article>
          </li>
        </ul>
      </div>
    </section>
  </body>
</html>